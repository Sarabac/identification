{% extends "layout.html.j2" %}
{#variables:
photos: liste de la forme [(id, chemin)...] avec
  id: id de la photo dans la base de donnee
  chemin: chemin vers la photo

especes: liste de la forme[(id, nom, caracteristiques)...] avec
  id: id de l'espece
  nom: nom de l'espece
  caracteristiques: liste des caracteristiques de l'espece de la forme
                    [(id, nom, modalite)...] avec
    id: id de la caracteristique
    nom: nom de la caracteristique
    modalite: liste des modalites de la forme(id, nom)
#}

{% block script %}
<script type=text/javascript src={{ url_for('static', filename='photos.js') }}></script>
{% endblock %}

{% block main %}
  {%for id,che in photos%}
    <div class = photo>
      {#on retire les 7 premieres lettres de che qui correspondent a 'static/'#}
      <img src={{url_for('static', filename=che[7:])}} name={{id}}/>
    </div>
  {%endfor%}
{%endblock%}

{% block header %}
  <div class = 'cache'>
    {%for id,nom,caract in especes%}
    {%endfor%}
  </div>
{%endblock%}
